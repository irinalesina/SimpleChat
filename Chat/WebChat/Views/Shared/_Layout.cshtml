<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Simple chat</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    @RenderSection("css", required: false)
</head>
<body ng-app="WebChat">
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Home", "Index", "Home", null, new { @class = "navbar-brand" })
                @Html.ActionLink("My messages", "UserMessages", "Home", null, new { @class = "navbar-brand" })
                @Html.ActionLink("All users messages", "AllUsersMessages", "Home", null, new { @class = "navbar-brand" })
            </div>
        </div>
    </div>

    <div class="container body-content" align="center" ng-controller="enterNameDialogController" ng-init="showEnterNameDialog($event)">
        @RenderBody()
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/angular", "~/Angular/main.js")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/additionalJs")

    @RenderSection("scripts", required: false)
</body>
</html>